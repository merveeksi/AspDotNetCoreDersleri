@using BlogApp.Models
@using BlogApp.ViewComponents
@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach(var tag in Model.Tags)
                {
                    <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                }
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
            <div>
               @Html.Raw(@Model.Content)
            </div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comments.Count()</span> adet yorum</h4>
                </div>
                <div class="card-body">
                    <div id="comments"> @* yorumların listeleneceği alan *@
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="my-4 d-flex">
                                <img src="/img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                                <div>
                                    <div class="mb-2 d-flex"> @*d-flex ile yatay hizalama yapılır *@
                                        <h6 class="me-2">@comment.User.UserName</h6>
                                        <small>@comment.PublishedOn.ToString("d")</small>
                                    </div>
                                    <p>@comment.Text</p>
                                </div>
                            </div>
                        }
                    </div>
                    @if (User.Identity!.IsAuthenticated) // Kullanıcı giriş yapmışsa
                    {
                        @* yorum ekleme formu *@
                        <hr class="my-4">
                        <div>
                            <h4 class="mb-3">Yorum Ekle</h4>
                            <form action="/posts/AddComment" method="post"> @* formun post edileceği adres *@
                                <input type="hidden" name="PostId" value="@Model.PostId">
                                <div class="mb-3">
                                    <label for="Text" class="form-label"> Yorum</label>
                                    <textarea type="text" name="Text" id="Text" row="3" class="form-control"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button id="btnRegisterComment" type="submit" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    }
                    else // Kullanıcı giriş yapmamışsa
                    {
                        <p>Yorum için uygulamaya giriş yapmalısınız. <a href="/users/login">Login</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        // yorum ekleme butonuna tıklandığında çalışacak kod bloğu
    $(document).ready(function () {
    
        $("#btnRegisterComment").click(function () {
             $.ajax({
                    type: 'POST', 
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                    PostId: $('#PostId').val(),
                    username: $('#UserName').val(),
                    Text: $('#Text').val()
                    },
                    success: function (yorum) {
                    console.log(yorum);
                    var date = new Date(yorum.PublishedOn);
                        $("#comments").append(`
                            <div class="my-4 d-flex">
                                <img src="/img/${yorum.avatar}" alt="" class="avatar rounded-circle float-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">${yorum.username}</h6>
                                        <small>${date.toLocaleDateString()}</small>
                                    </div>
                                    <p>${yorum.Text}</p>
                                </div>
                            </div>
                        `);
                        $('#UserName').val('');
                        $('#Text').val('');
                        
                        var adet = parseInt($("#commentCount").text());
                        $("#commentCount").text(adet + 1);
                    }
             });
             return false;
        });
    });
    
    </script>
}
